<div class="flex justify-center">
  <div class="flex flex-col border-2 border-blue mt-2 md:flex-row md:max-w-2xl rounded-lg bg-white shadow-lg">
    <%= image_tag "#{@story.photo}", class: "w-full md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" %>
    <div class="p-6 flex flex-col justify-start">
      <h5 class="text-gray-900 text-xl font-medium mb-2"><%= "#{@story.name}" %></h5>

      <div data-controller="sentence-loading">
        <%= render "story", story: @story %>
      </div>

    </div>
  </div>
</div>

