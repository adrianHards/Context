<% if @story.published == true %>
    <% @story.sentences.each do |sentence| %>
      <%= turbo_frame_tag sentence do %>
        <%= link_to story_sentence_path(@story, sentence) do %>
          <span data-controller="check" class="text-pink border-2 border-blue rounded-lg">
            <span data-action="click->check#show"><%= render "sentences/spanish", sentence: sentence.spanish %></span>
        <% end %>
          </span>
      <% end %>
    <% end %>
<% end %>
