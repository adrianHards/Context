<% if @story.published == true %>

  <% @story.sentences.first(10).each do |sentence| %>

    <% if rand(4) == rand(4) %>
      <%= turbo_frame_tag sentence do %>
        <%= link_to story_sentence_path(@story, sentence) do %>
          <span data-controller="check" class="text-pink bg-teal rounded-lg">
            <span class="sentence story-lines rounded-lg text-white" data-action="click->check#show"><%= render "sentences/sentence", sentence: sentence.spanish %></span>
        <% end %>

          </span>
        <% end %>

    <% else %>
      <span class=" story-lines sentence text-white">
        <%= render "sentences/sentence", sentence: sentence.english %>
      </span>
    <% end %>

  <% end %>

<% end %>
