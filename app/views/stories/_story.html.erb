<% if @story.published == true %>
  <% @story.sentences.each do |sentence| %>

    <% if rand(2) == rand(2) %>
      <span class="text-pink">
        <%= render "sentence", sentence: sentence.spanish %>
      </span>
    <% else %>
      <span>
        <%= render "sentence", sentence: sentence.english %>
      </span>
    <% end %>

  <% end %>
<% end %>

